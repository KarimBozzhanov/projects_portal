@model IEnumerable<projects_portal.Models.AddProject>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HZ_Project</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Create" asp-controller="Home" asp-route-userName="@User.Identity.Name" class="fixed-button"><i class="fa-solid fa-plus"></i></a>
    }

    <div class="content">
        <div class="container">
            @foreach (var item in Model)
            {
                <div class="card border border-0">
                    <div class="card-body">
                        <div class="user-header">
                            <div class="row">
                                <div class="col">
                                    <div class="username text-bg-dark" style="margin-left: 10px; margin-top: 4px">
                                        <h4 class="text-light" style="margin-bottom: 0px">@item.Name</h4>
                                        <p style="color: #696969"><b>@item.Group</b></p>
                                    </div>
                                </div>
                                <a class="edit" asp-action="editPost" asp-controller="home" asp-route-id="@item.Id" asp-route-userName="@item.Name" style="text-decoration: none"><b>Редактировать</b><i class="fa-solid fa-sliders" style="padding-left: 15px"></i></a>
                                <a class="git text-light" href="@item.urlGit" style="text-decoration: none"><b>GitHub</b><img src="/Images/github.png" style="width: 35px; height:25px; padding-left: 10px; margin-bottom: 5px" /></a>
                                <a class="presentation text-light" id="presentationText" onclick="presentationEdit.click()" style="text-decoration: none"><b>Презентация</b><i class="fa-regular fa-folder" style="padding-left: 10px"></i></a>
                                <a class="download" asp-action="editPost" asp-controller="home" style="text-decoration: none"><b>Скачать</b><i class="fa-regular fa-folder" style="padding-left: 15px"></i></a>
                            </div>
                            <hr style="background-color: #696969; margin-top: 0px; margin-bottom: 30px" />
                        </div>
                        <div class="user-content">
                            <div class="box">
                                <img style="float: left" src="@Url.Content(item.ImagePath)">
                            </div>
                            <p class="title text-light" style="font-size: 25px; margin-bottom: 0px;">@item.NameOfProject</p>
                            <p class="description line-limit-length text-light" style="display: inline">@item.Description</p>
                        </div>
                        <div class="user-footer">
                            <a class="site-url text-light" href="@item.siteUrl">@item.siteUrl</a>
                            <p style="color: #696969; display: inline; margin-right: 10px"><b>@item.TimeOfCreating</b></p>
                            <form asp-action="favoritePost" asp-controller="home" style="float: right" asp-route-userName="@User.Identity.Name" asp-route-postId="@item.Id">
                                <button class="favoriteButton" type="submit" style="color: #ffff"><i class="fa-regular fa-bookmark"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>