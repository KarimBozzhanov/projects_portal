@model projects_portal.ViewModels.RegisterModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HZProject</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css   />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="content">
        <div class="container">
            <div class="registration_header pt-5">
                <h4 align="center" class="text-light">Welcome to MonoLOG</h4>
                <h4 align="center" class="text-light">Let's get started</h4>
            </div>
            <form asp-action="Register" asp-controller="Home" enctype="multipart/form-data">
               <div class="form-group" align="center">
                   <div class="studentCheckBox" align="center">
                        <label class="t-radio__control">
                            <input type="radio" name="role" onclick="studentButton()" value="С" checked="checked" class="t-radio js-tilda-rule">
                            <div class="radio_button" id="student_btn" style="position: relative; z-index: 99">
                                <b class="radio_text">Student</b>
                            </div>
                        </label>
                   </div>
                    <div class="teacherCheckBox" style="display: inline" align="justify">
                        <label class="t-radio__control">
                            <input type="radio" name="role" onclick="teacherButton()" value="П" data-tilda-req="1" class="t-radio js-tilda-rule">
                            <div class="radio_button" id="teacher_btn" style="position: relative; z-index: 98">
                                <b class="radio_text">Teacher</b>
                            </div>
                        </label>
                    </div>
                   <input type="text" asp-for="Name" class="register-input" placeholder="Name" autocomplete="off"/>
                   <input type="text" asp-for="Group" style="display: block" id="groupInput" class="register-input" placeholder="Group" autocomplete="off"/>
                   <input type="password" asp-for="Password" class="register-input" placeholder="Password" autocomplete="off"/>
                   <input type="password" asp-for="ConfirmPassword" class="register-input" placeholder="Repeat Password" autocomplete="off"/>
               </div>
               <div class="haveAcc" style="margin-left: 40%; float: left; font-size: 13px">
                   <p class="text-light" style="margin-bottom: 0px">You have account</p>
                    <p class="text-light" style="margin-bottom: 0px">
                        click here <i class="fa-solid fa-arrow-right-long" style="padding-left: 5px; padding-right: 5px"></i>
                        <a class="signIn_text" asp-action="Login" asp-controller="home">
                            <b>Sign in</b>
                        </a>
                    </p>
               </div>
               <div class="form-group" align="center" style="display: inline">
                    <button type="submit" class="signUp_button btn rounded-3 mt-1" style="color: #ffff; margin-left: 15px" align="right">Sign Up</button>
               </div>
            </form>
        </div>  
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
